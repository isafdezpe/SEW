        <fecha>2019-05-05</fecha>
        <hora>10:00</hora>
        <duracion>PT6H</duracion>
        <agencia>Turismo de Asturias</agencia>
        <descripcion>Recorrido visitando lugares de la costa Asturiana</descripcion>
        <personas>Jóvenes y adultos</personas>
        <lugar>Luarca</lugar>
        <direccion>Faro de Luarca</direccion>
        <coordenadas>
            <longitud>43º32'58''N</longitud>
            <latitud>-6º31'57''W</latitud> 
            <altitud>17m</altitud>
        </coordenadas>
