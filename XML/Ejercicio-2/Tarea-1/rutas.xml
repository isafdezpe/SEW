                    <longitud-hito>43º33'36''N</longitud-hito>
                    <latitud-hito>-6º08'55''W</latitud-hito> 
                    <altitud-hito>49m</altitud-hito>
                </coordenadas-hito>
                <distancia unidades="kilometros">39.4</distancia>
                <galeria>
