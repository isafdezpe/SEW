        <hitos>
            <hito nombre="La Lechera">
                <descripcion-hito>Esculura homenaje a las mujeres que trabajaron como leceras hasta mediados del silo XX.</descripcion-hito>
                <coordenadas-hito>
                    <longitud-hito>43º21'38''N</longitud-hito>
                    <latitud-hito>-5º50'38''W</latitud-hito> 
                    <altitud-hito>233m</altitud-hito>
                </coordenadas-hito>
                <distancia unidades="metros">300</distancia>
                <galeria>
                    <fotografia archivo="multimedia/Oviedo_aldeana_sculpture.jpg">Fotografía de la escultura</fotografia>
                    <fotografia archivo="multimedia/trascorrales.jpg">Fotografía de la plaza</fotografia>
                </galeria>
            </hito>
            <hito nombre="Vendedoras del Fontán">
                <descripcion-hito>Representa a las mujeres que venían a Oviedo para vender cerámica.</descripcion-hito>
                <coordenadas-hito>
                    <longitud-hito>43º21'34''N</longitud-hito>
                    <latitud-hito>-5º50'45''W</latitud-hito> 
                    <altitud-hito>232m</altitud-hito>
                </coordenadas-hito>
                <distancia unidades="metros">280</distancia>
                <galeria>
                    <fotografia archivo="multimedia/Vendedoras_del_Fontan.jpg">Fotografía de la escultura</fotografia>
                </galeria>
            </hito>
            <hito nombre="¡Adiós, cordera!">
                <descripcion-hito>Representa el cuento de Alas Clarín del mismo nombre que la escultura.</descripcion-hito>
                <coordenadas-hito>
                    <longitud-hito>43º21'42''N</longitud-hito>
                    <latitud-hito>-5º51'12''W</latitud-hito> 
                    <altitud-hito>241m</altitud-hito>
                </coordenadas-hito>
                <distancia unidades="metros">850</distancia>
                <galeria>
                    <fotografia archivo="multimedia/Adios_Cordera.jpg">Fotografía de la escultura</fotografia>
                </galeria>
            </hito>
        </hitos>
    </ruta>
    <ruta nombre="Ruta por la costa">
        <tipo>Paisajística</tipo>
