<rutas>
    <ruta nombre="Ruta por Oviedo">
        <tipo>Monumentos</tipo>
        <transporte>A pie</transporte>
        <fecha>2018-11-02</fecha>
        <hora>12:00</hora>
        <duracion>PT2H</duracion>
        <agencia>Turismo de Oviedo</agencia>
        <descripcion>Recorrido visitando los monumentos más conocidos de Oviedo</descripcion>
        <personas>Jóvenes y adultos</personas>
        <lugar>Oviedo</lugar>
        <direccion>Plaza de la catedral</direccion>
        <coordenadas>
            <longitud>43º21'44''N</longitud>
            <latitud>-5º50'39''W</latitud> 
            <altitud>232m</altitud>
        </coordenadas>
        <referencia ref-number="1" enlace="http://el.tesorodeoviedo.es/index.php?title=Plaza_de_Alfonso_II">Plaza de la catedral</referencia>
        <referencia ref-number="2" enlace="https://es.wikipedia.org/wiki/La_Regenta_(escultura)">Escultura La Regenta</referencia>
